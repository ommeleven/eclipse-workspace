    char cValue1 = '7'; // Here 7 is represented as a symbol !!
    cout << cValue1 << endl;

    cout <<  " Size od char: " << sizeof(char) << endl;


    wchar_t wValue = 'i';
    cout << char(wValue) << endl;
    cout << "Size of wChar:" << sizeof(wchar_t) << endl;










