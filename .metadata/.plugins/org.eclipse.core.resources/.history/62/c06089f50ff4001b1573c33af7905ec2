	cout << sValue2 << endl;


	string  sValue3 = sValue1 + sValue2;
	cout << sValue1 << sValue2 << endl;


	cout << sValue3 << endl;


	// Basic Syntax: User Input (not UI)

	cout << " Enter User Input:  " << flush;

