#include <iostream>
using namespace std;

int main() {

	const string password = "Hello";

	cout << "Enter your Password > " ;

	string input;
	cin >> input;

	if(input == password) {
		cout << "Password accepted !!" << endl;

	}
	else {
			cout << "Password Declined !!" << endl;

		}




	return 0;
}
